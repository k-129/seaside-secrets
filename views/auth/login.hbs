<div id="login-form" class="mx-4 my-4 py-4 pt-5 ">
  <h2 class="d-flex justify-content-center  mb-5">Log In</h2>
  <form action="/login" method="POST" class=" d-flex justify-content-center">

    <label> Email
      <input class="form-control mr-2" type="email" name="email" placeholder="Your email" />
    </label>

    <label> Password
      <input class="form-control mr-2" type="password" name="password" placeholder="Your password" />
    </label>

    <button type="submit" class="btn btn-info">Log In</button>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>