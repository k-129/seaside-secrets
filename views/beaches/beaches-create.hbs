<div class="row pt-5">
  <h2 class="d-flex justify-content-center">Add beach</h2>
  <div class="d-flex mt-4 p-4 justify-content-center border border-info">
    <form action="/beaches/create" method="post" {{!-- enctype="multipart/form-data" --}}>


      <div class="form-group row">
        <label>Name
          <input type="text" name="name" class="form-control" value="{{name}}" />
        </label>
      </div>

      <div class="form-group row">
        <label>Address
          <input type="text" name="address" class="form-control" value="{{address}}" />
        </label>
      </div>

      <div class="form-group d-flex row">
        <label>Location
          <input type="text" name="location.lat" class="form-control" value="{{location.lat}}" />

          <input type="text" name="location.lng" class="form-control" value="{{location.lng}}" />
        </label>
      </div>

      <div class="form-group row">
        <label>Description
          <textarea name="description" cols="30" rows="4" class="form-control">{{description}}
            </textarea>
        </label>
      </div>

      <div class="form-check form-check-inline pt-2">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="filters" value="Dog Friendly">
        <label class="form-check-label" for="inlineCheckbox1">Dog Friendly</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" name="filters"  value="WI-FI">
        <label class="form-check-label" for="inlineCheckbox2">WI-FI</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" name="filters"  value="Bathroom">
        <label class="form-check-label" for="inlineCheckbox3">Bathroom</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox3" name="filters"  value="Bar">
        <label class="form-check-label" for="inlineCheckbox3">Bar</label>
      </div>


      <div class="form-group">
        <label>Image
          <input type="file" name="movie-cover-image" class="form-control-file" />
          <input type="text" name="existingImage" hidden value="{{imageUrl}}">
        </label>
      </div>

      <button type="submit" class="btn mt-4" style="background-color: #94E1EF !important;">Save changes</button>
    </form>
  </div>
</div>